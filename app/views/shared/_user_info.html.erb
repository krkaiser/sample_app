<% active_user = (@user ? @user : current_user) %>
<div class="user_info">
  <a href="<%= user_path(active_user) %>">
    <%= gravatar_for active_user, :size => 30 %>
    <span class="user_name">
      <%= active_user.name %>
    </span>
    <span class="microposts">
      <%= pluralize(active_user.microposts.count, "micropost") %>
    </span>
  </a>
</div>
