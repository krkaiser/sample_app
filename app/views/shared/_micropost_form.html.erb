<%= form_for @micropost do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.text_area :content %>
    <p>Characters left: <span id="char_left_count">
      
    </span></p>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
